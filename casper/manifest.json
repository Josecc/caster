{
  "manifest_version": 2,

  "name": "Caster",
  "description": "Cast online videos to Roku right from your browser!",
  "version": "1.0",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
